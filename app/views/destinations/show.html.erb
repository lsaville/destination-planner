<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @destination.name %>
  </h3>

  <p>
    <strong>Zip:</strong>
    <%= @destination.zip %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @destination.description %>
  </p>

  <%= image_tag(@destination.image_url) %>

  <div class="row">
    <h4>Forecast for <%= @destination.name %>:</h4>
    <table>
      <tr>
        <th>Date</th> 
        <th>High</th> 
        <th>Low</th> 
        <th>Conditions</th> 
      </tr> 
      <% @weather.each do |day| %>
        <th><%= day['date']['weekday'] %> <%= day['date']['monthname'] %> <%= day['date']['day']%></th>
        <th><%= day['high'] %></th>
        <th><%= day['low'] %></th>
        <th><%= day['conditions'] %></th>
      <% end %>
    </table>    
  </div>

  <div class="row">
    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>
